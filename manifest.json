{
  "manifest_version": 3,
  "name": "Joke Extension",
  "version": "1.0",
  "description": "Get a random joke with a click of a button.",
  "action": {
    "default_popup": "popup.html",
    "default_icon": {
      "16": "icon16.png"
      
    }
  },
  "permissions": ["scripting"],
  "host_permissions": [
    "https://api.jokesapi.io/"
  ],
  "icons": {
    "16": "icon16.png"
  },
  "web_accessible_resources": [
    {
      "resources": [
        "popup.html"
      ],
      "matches": ["https://*/*"]
    }
  ]
}

  